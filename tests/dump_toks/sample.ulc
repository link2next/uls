#@ulc-2.4
#
#  ULC: Unified Lexical Configuration
#
DOMAIN: uls.link2next.io://season-1

ID_FIRST_CHARS: _ a-z A-Z
ID_CHARS: _ 0-9 a-z A-Z

DECIMAL_SEPARATOR: _ 
NUMBER_PREFIXES: 0x:16 0X:16 0:8 0b:2
NUMBER_SUFFIXES: UL L LU ul lu f F

COMMENT_TYPE: /* */
COMMENT_TYPE: // \n

QUOTE_TYPE: token=DQUOTE " x:\x2 u:\u4
QUOTE_TYPE: token=BBQUOTE options=multiline,asymmetric  [[ ]] 
QUOTE_TYPE: token=SQUOTE ' verbatim1

NOT_CHAR_TOK: multibytes=false %~_! 

%%
#
# Token Definition List
# There are basically 3 columns per line, <token-name> <keyword> <token-id>.
# The third column can be omitted if you intend it to be the successor of the previous one.
#

AND      &&        128
OR       ||
EQ       ==
LEQ      <=
GEQ      >=
NEQ      !=
EQEQ     ===
SHFT_ASGN     <<=
IMPORT     @import
SNOWMAN   ☃$
#SNOWMAN   \u2603$
EUROSIGN  \u20ac
#EUROSIGN  €
ARROW     ->

OR       or    

ASM      asm       150
DEFAULT  default
AUTO     auto
DO       do
DOUBLE   double

ELSE     else      160
ENUM     enum

GOTO     goto      165
IF       if
BREAK    break
CASE     case
SWITCH   switch
TYPEDEF  typedef   170
UNION    union
CHAR     char
EXTERN   extern
FLOAT    float
FOR      for       175
CONTINUE continue
CONST    const
INT      int
LONG     long
REGISTER register  180

# Tok-id remapping of 1-char tokens.
BEGIN    {       300
END      }
AT       @

RETURN   return    185
SHORT    short
SIGNED   signed
SIZEOF   sizeof
STATIC   static
STRUCT   struct    190
UNSIGNED unsigned
VOID     void
VOLATILE volatile
WHILE    while

